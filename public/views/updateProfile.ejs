<%- include('partials/header', {pageTitle: 'Gamefy'}) %>

    <link rel="stylesheet" href="../css/updateProfile.css">

    <main class="container mt-5">
        <form id="update-profile-form" class="login-form">

            <div class="form-group">
                <label for="name">Nome:</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>

            <div class="form-group">
                <label for="familyName">Sobrenome:</label>
                <input type="text" class="form-control" id="familyName" name="familyName" required>
            </div>

            <div class="form-group">
                <label for="bio">Bio:</label>
                <input type="text" class="form-control" id="bio" name="bio">
            </div>

            <div class="form-group">
                <label for="location">Localização:</label>
                <input type="text" class="form-control" id="location" name="location">
            </div>

            <div class="form-group">
                <label for="birthday">Aniversario:</label>
                <input type="date" class="form-control" id="birthday" name="birthday">
            </div>

            <div class="form-group">
                <label for="socialmediax">Twitter:</label>
                <input type="text" class="form-control" id="socialmediax" name="socialmediax">
            </div>

            <div class="form-group">
                <label for="socialmediaInstagram">Instagram:</label>
                <input type="text" class="form-control" id="socialmediaInstagram" name="socialmediaInstagram">
            </div>

            <div class="form-group">
                <label for="socialmediaTikTok">Tik Tok:</label>
                <input type="text" class="form-control" id="socialmediaTikTok" name="socialmediaTikTok">
            </div>

            <div class="form-group">
                <label class="form-label" for="selectedCat">Escolha um gif para ser sua foto de perfil</label>
                <select id="category" class="">
                    <option> Escolha uma categoria</option>
                    <option value="horror">Personagens do Terror</option>
                    <option value="animation">Personagens de Animação</option>
                    <option value="action">Personagens de Ação</option>
                    <option value="animals">Animais</option>
                </select>
            </div>
            
            <div class="cat-options" id="photo-options">
                <input type="hidden" id="selectedCat" name="selectedCat">
            </div><br>

            <button type="submit" class="btn btn-primary btn-block">Atualizar Perfil</button>
            <a href="/" class="btn text-white btn-link mt-3">Voltar para a página inicial</a>
        </form>
    </main>

    <%- include('partials/footer') %>

        <script src="../js/updateProfile.js"></script>